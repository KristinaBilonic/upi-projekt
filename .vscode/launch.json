{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Backend",
            "program": "${workspaceFolder}/projekt/backend/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "runtimeArgs": ["--incognito"]
        },
        {
            "name": "Launch Frontend",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "cwd": "${workspaceRoot}/projekt",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}